{
    
    "name": "Tipjar",
    "description": "Accept monetary contributions from your grateful visitors",
    "version": "0.1",
    "category": "loyalty programs",
    "main": "public/javascripts/tipjar.js",
    "config":{
        "details":{
            "Language": "English",
            "Price": "Free",
            "Restrictions": "None",
            // TODO: fill in custom TOS URL
            "TOS":"http://www.cloudflare.com/terms",
            "has_js": true
        }, 
        "assets":{
            // TODO: fill in assets
            "logos" : {
                "200px": "./public/images/logo-200.png",
                "132px": "./public/images/logo-132.png"
            },
        },
        "interface": [
            {
                "type": "string",
                "id": "app_key",
                "name": "Dwolla App Key",
                "description": "Your Dwolla Application Key.",
                // TODO: what do domain request and private mean?
                "domain_request": true,
                "private": true
            },
            {
                "type": "select",
                "id": "display_mode",
                "name": "Display Mode",
                "description": "When should the Tipjar appear?",
                "options": [
                    {
                        "label": "After the user visits my site some number of times.",
                        "value": "count"
                    },
                    {
                        "label": "After the user spends some amount of time on my site.",
                        "value": "time"
                    },
                    {
                        "label": "Always.",
                        "value": "always"
                    },
                ]
            },
            {
                "type": "integer",
                "id": "visit_threshold",
                "name": "Visit Threshold",
                "description": "How many times should a user visit your site before Tipjar appears?",
                "domain_request": true,
                "private": true
            },
            {
                "type": "integer",
                "id": "time_threshold",
                "name": "Time Threshold",
                "description": "How long should a user remain on a page before the tipjar appears? (seconds)",
                "domain_request": true,
                "private": true
            }
            
        ]
    }
}